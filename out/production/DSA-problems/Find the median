class ThreeSumCloset
{
    public int find_median(int[] v)
    {
        int mid;
        Arrays.sort(v);
        if(v.length%2!=0) {
            mid = (0 + v.length - 1) / 2;
            return v[mid];
        }else {
            mid=(0+v.length-1)/2;
            return (v[mid]+v[mid+1])/2;
        }
    }
}
